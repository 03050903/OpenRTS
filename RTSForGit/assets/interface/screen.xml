<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="interface/myNifty/myStyles.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="interface/myNifty/myControls.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="screen"/>
    
    <screen id="hud" controller="controller.battlefield.BattlefieldGUI">
        <layer childLayout="horizontal">
            <image filename="interface/bg.png" width="100%" height="100%"></image>
        </layer>
        <layer childLayout="horizontal">
            <panel height="30%" childLayout="horizontal" valign="bottom">
                <panel width="22%" childLayout="vertical">
                    <panel height="20%" backgroundColor="#0f08" childLayout="center">
                        <control name="button" label="Select All Units" id="sabutton" color="#000" width="100%" height="100%" visibleToMose="true">
                            <interact onClick="selectAll()"/>
                        </control>
                    </panel>
                    <panel name="map" width="100%" height="80%" childLayout="vertical">
                    </panel>
                </panel>
                <panel width="78%" childLayout="horizontal" valign="bottom">
                    <panel name="info" id="info" width="50%" height="70%" childLayout="vertical" valign="bottom">
                        <text id="unitName" width="100%" textHAlign="left" text="error" font="interface/fonts/arial.fnt"/>
                        <text id="unitHealth" width="100%" textHAlign="left" text="error" font="interface/fonts/arial.fnt"/>
                        <text id="unitState" width="100%" textHAlign="left" text="error" font="interface/fonts/arial.fnt"/>
                        <text id="unitOrder" width="100%" textHAlign="left" text="error" font="interface/fonts/arial.fnt"/>
                        <text id="unitHolding" width="100%" textHAlign="left" text="error" font="interface/fonts/arial.fnt"/>
                    </panel>
                    <panel name="buttons" width="100%" height="100%" childLayout="horizontal" valign="top">
                        <panel id="psel4" height="125" width="100" childLayout="center" align="right">
                            <image filename="interface/unity.png" width="100%" height="100%"></image>
                            <effect>
                                <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                                <onHide name="fade" start="#ff" end="#00" length="300" startDelay="0" inherit="true"/>
                            </effect>
                            <control name="label" id="sel4" color="#fff" width="100%" height="100%" visibleToMouse="true">
                                <interact onClick="select(4)"/>
                            </control>
                        </panel>
                        <panel id="psel3" height="125" width="100" childLayout="center" align="right">
                            <image filename="interface/unity.png" width="100%" height="100%"></image>
                            <effect>
                                <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                                <onHide name="fade" start="#ff" end="#00" length="300" startDelay="0" inherit="true"/>
                            </effect>
                            <control name="label" id="sel3" color="#fff" width="100%" height="100%" visibleToMouse="true">
                                <interact onClick="select(3)"/>
                            </control>
                        </panel>
                        <panel id="psel2" height="125" width="100" childLayout="center" align="right">
                            <image filename="interface/unity.png" width="100%" height="100%"></image>
                            <effect>
                                <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                                <onHide name="fade" start="#ff" end="#00" length="300" startDelay="0" inherit="true"/>
                            </effect>
                            <control name="label" id="sel2" color="#fff" width="100%" height="100%" visibleToMouse="true">
                                <interact onClick="select(2)"/>
                            </control>
                        </panel>
                        <panel id="psel1" height="125" width="100" childLayout="center" align="right">
                            <image filename="interface/unity.png" width="100%" height="100%"></image>
                            <effect>
                                <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                                <onHide name="fade" start="#ff" end="#00" length="300" startDelay="0" inherit="true"/>
                            </effect>
                            <control name="label" id="sel1" color="#fff" width="100%" height="100%" visibleToMouse="true">
                                <interact onClick="select(1)"/>
                            </control>
                        </panel>
                        <panel id="psel0" height="125" width="100" childLayout="center" align="right">
                            <image filename="interface/unity.png" width="100%" height="100%"></image>
                            <effect>
                                <onShow name="move" mode="in" direction="bottom" length="300" startDelay="0" inherit="true"/>
                                <onHide name="fade" start="#ff" end="#00" length="300" startDelay="0" inherit="true"/>
                            </effect>
                            <control name="label" id="sel0" color="#fff" width="100%" height="100%" visibleToMouse="true">
                                <interact onClick="select(0)"/>
                            </control>
                        </panel>
                    </panel>
                </panel>
            </panel>
      </layer>
   </screen>
  
  
    <screen id="editor" controller="controller.editor.EditorGUIController">
        <layer id="mainlayer" childLayout="vertical">
            <panel id="menupanel" childLayout="horizontal" width="100%" x="62" y="42" style="nifty-panel-simple" height="50px">
                <control name="button" id="new" childLayout="center" backgroundImage="button/button.png" x="53" width="80px" y="19" label="New" height="30px">
                  <interact onClick="newMap()"/>
                </control>
                <control name="button" id="save" childLayout="center" width="80px" label="Save" height="30px">
                  <interact onClick="save()"/>
                </control>
                <control name="button" id="load" childLayout="center" width="80px" label="Load" height="30px">
                  <interact onClick="load()"/>
                </control>
            </panel>
            <panel id="toolbox" childLayout="vertical" width="180px" style="nifty-panel-simple" height="*">
                <panel id="toolselection" childLayout="vertical" width="100%" style="nifty-panel-simple" height="100px">
                    <panel id="toolselectionrow1" childLayout="horizontal" width="100%" align="left" height="50%">
                        <control name="button" id="clifftool" childLayout="center" childClip="10" backgroundImage="button/button.png" width="40px" label="cliff" align="center" height="40px">
                          <interact onClick="setCliffTool()"/>
                        </control>
                        <control name="button" id="heighttool" childLayout="center" width="40px" label="height" height="40px">
                          <interact onClick="setHeightTool()"/>
                        </control>
                        <control name="button" id="atlastool" childLayout="center" width="40px" label="tex." height="40px">
                          <interact onClick="setAtlasTool()"/>
                        </control>
                        <control name="button" id="ramptool" childLayout="center" width="40px" label="ramp" height="40px">
                          <interact onClick="setRampTool()"/>
                        </control>
                    </panel>
                    <panel id="toolselectionrow2" childLayout="horizontal" width="100%" align="left" height="50%">
                        <control name="button" id="unittool" childLayout="center" width="40px" label="units" height="40px">
                          <interact onClick="setUnitTool()"/>
                        </control>
                    </panel>
                </panel>
                <panel id="toolop" childLayout="vertical" width="100%" style="nifty-panel-simple" height="101px">
                    <control name="button" id="operation0" childLayout="center" width="80%" align="center" height="30px">
                      <interact onClick="setOperation(0)"/>
                    </control>
                    <control name="button" id="operation1" childLayout="center" width="80%" align="center" height="30px" visibleToMouse="true">
                      <interact onClick="setOperation(1)"/>
                    </control>
                    <control name="button" id="operation2" childLayout="center" width="80%" align="center" height="30px" visibleToMouse="true">
                      <interact onClick="setOperation(2)"/>
                    </control>
                </panel>
                <panel id="toolparam" childLayout="absolute" width="100%" height="*">
                  <panel id="setpanel" childLayout="vertical" x="0" y="0" width="100%" style="nifty-panel-simple" height="100">
                      <panel id="paramsetrow1" childLayout="horizontal" width="100%" height="50%">
                          <control name="myButton" id="set0" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(0)"/>
                          </control>
                          <control name="myButton" id="set1" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(1)"/>
                          </control>
                          <control name="myButton" id="set2" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(2)"/>
                          </control>
                          <control name="myButton" id="set3" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(3)"/>
                          </control>
                      </panel>
                      <panel id="paramsetrow2" childLayout="horizontal" width="100%" height="50%">
                          <control name="myButton" id="set4" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(4)"/>
                          </control>
                          <control name="myButton" id="set5" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(5)"/>
                          </control>
                          <control name="myButton" id="set6" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(6)"/>
                          </control>
                          <control name="myButton" id="set7" backgroundImage="button/button.png" width="40px" height="40px">
                            <interact onClick="setSet(7)"/>
                          </control>
                      </panel>
                  </panel>
                  <panel id="pencilpanel" childLayout="horizontal" width="100%" x="0" y="100" style="nifty-panel-simple" height="*">
                      <panel id="penciltype" childLayout="vertical" width="50px" align="center" height="300">
                          <panel id="pencilshapepanel" childLayout="vertical" width="100%" height="130px">
                              <control name="button" id="square" childLayout="center" width="40px" label="square" align="left" height="40px">
                                  <interact onClick="setSquareShape()"/>
                              </control>
                              <control name="button" id="diamond" childLayout="center" width="40px" label="diamond" height="40px">
                                  <interact onClick="setDiamondShape()"/>
                              </control>
                              <control name="button" id="circle" childLayout="center" width="40px" label="circle" height="40px">
                                  <interact onClick="setCircleShape()"/>
                              </control>
                          </panel>
                          <panel id="pencilmodepanel" childLayout="vertical" width="100%" height="130px">
                              <control name="button" id="rough" childLayout="center" width="40px" label="rough" align="left" height="40px">
                                  <interact onClick="setRoughMode()"/>
                              </control>
                              <control name="button" id="airbrush" childLayout="center" width="40px" label="airbrush" height="40px">
                                  <interact onClick="setAirbrushMode()"/>
                              </control>
                              <control name="button" id="noise" childLayout="center" width="40px" label="noise" height="40px">
                                  <interact onClick="setNoiseMode()"/>
                              </control>
                          </panel>
                      </panel>
                      <panel id="sizepanel" childLayout="vertical" width="*" height="200px">
                          <control name="label" id="sizetext" width="100%" text="Size :" align="left" height="40px" font="aurulent-sans-16.fnt"/>
                          <control name="verticalSlider" min="1" max="10" initial="2" stepSize="2" id="sizeslider" width="100%" height="*"/>
                      </panel>
                      <panel id="strpanel" childLayout="vertical" width="*" height="200px">
                          <control name="label" id="strtext" width="100%" text="Str. :" align="left" height="40px" font="aurulent-sans-16.fnt"/>
                          <control name="verticalSlider" id="strslider" width="100%" height="*"/>
                      </panel>
                  </panel>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>












































